{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Dredge Mod Manager",
    "version": "0.0.9"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true, 
        "ask": true, 
        "confirm": true, 
        "message": true, 
        "open": true,
        "save": true 
      },
      "app": {
        "all": true,
        "show": true,
        "hide": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.xen-42.dredge-mod-manager",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
            "license": "../LICENSE",
            "bannerPath": "installer-images/wix/TopBanner.png",
            "dialogImagePath": "installer-images/wix/Background.png"
        },
        "nsis": {
            "license": "../LICENSE",
            "installerIcon": "icons/icon.ico",
            "installMode": "both",
            "headerImage": "installer-images/nsis/Header.bmp"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/xen-42/DredgeModManager/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "windows": {
        "installMode": "basicUi"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI2OEYzNTc3MDYwQjdFRDcKUldUWGZnc0dkeldQSnBZN2lpY3M1SUpML2ZuYkpMZWVueHBUVkxRaFB1RVcrOWJVeG1lS1BudXMK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Dredge Mod Manager",
        "width": 800,
        "height": 600
      }
    ]
  }
}
